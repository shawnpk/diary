<%= form_for @entry do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: 'Title', autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_area :contents, placeholder: 'Contents', class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to "Back to all entries", entries_path, class: 'btn btn-info' %>
