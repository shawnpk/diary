<h2><%= @entry.title %></h2>
<p><%= @entry.date %></p>
<p><%= @entry.contents %></p>

<%= link_to "Back to all entries", entries_path %>
<br>
<%= link_to "Edit this Entry", edit_entry_path(@entry) %>
<br>
<%= link_to "Delete this Entry", entry_path(@entry), method: :delete, data: { confirm: 'Are you sure you want to delete this entry?'} %>
